---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";
import companyData from "../components/Data/config.json";
import packageData from "../components/Data/Packages.json";
import "../styles/mouse-follower.min.css";
import PricingCard from "../components/PricingCard.astro";
import Contact from "../components/Contact.astro";
---

<Layout title="Trakexcel - Pricing">
  <main class="space-y-20">
    <Container>
      <div class="py-8 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
        <div class="mx-auto max-w-screen-md text-center mb-8 lg:mb-12">
          <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900">
            Designed for business teams like yours
          </h2>
          <p class="mb-5 font-light text-gray-500 sm:text-xl">
            Here at &nbsp;<span>{companyData.companyName}</span> &nbsp; we focus on markets where technology, innovation,
            and capital can unlock long-term value and drive economic growth.
          </p>
        </div>
        <div class="space-y-8 lg:grid lg:grid-cols-3 sm:gap-6 xl:gap-10 lg:space-y-0">
          <PricingCard
            title="Individual"
            description="Best option for individual businesses that need basic support."
            price="$500"
            features={packageData.packages.individual.features}
          />
          <PricingCard
            title="Startup"
            description="Relevant for multiple users, extended & premium support."
            price="$1500"
            features={packageData.packages.startup.features}
          />
          <PricingCard
            title="Enterprise"
            description="Best for large scale uses and extended redistribution rights."
            price="$4999"
            features={packageData.packages.enterprise.features}
          />
        </div>
      </div>
    </Container>
  </main>
  <Contact />
</Layout>
